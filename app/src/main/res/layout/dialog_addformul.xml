<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    >

    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ef7736"
        android:orientation="vertical"
        android:gravity="center">

    <EditText
        android:id="@+id/dialog_et_formul_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Formül ismi giriniz."
        android:textColorHint="@android:color/holo_orange_light"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="90dp"/>
        <TextView
            android:id="@+id/dialog_tv_formul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Formül"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            />

        <Button

            android:id="@+id/dialog_save_btn"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/dialog_save_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Kaydet"
            android:layout_marginTop="10dp"
            android:layout_gravity="start" />
        <Button
            android:id="@+id/dialog_cancel_btn"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_cancel_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Vazceç"
            android:layout_gravity="start" />

    </LinearLayout>
    <ImageView
        android:id="@+id/dialog_iv_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_fook"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />

</RelativeLayout>